<h1>Carga tu producto</h1>
<form action="/realTimeProducts" method="post">
    <div class="mb-3">
        <label for="exampleInput1" class="form-label">Nombre</label> 
        <input type="text" class="form-control" name="title" placeholder="ingrese nombre">
    </div>
    <div class="mb-3">
        <label for="exampleInput2" class="form-label">Precio</label> 
        <input type="number" class="form-control" name="price" placeholder="ingrese precio">
    </div>
    <div class="mb-3">
        <label for="exampleInput3" class="form-label">Foto URL</label> 
        <input type="text" class="form-control" name="thumbnail" placeholder="url imagen">
    </div>
    <button type="submit"  class="btn btn-primary" value="Cargar Producto"> Cargar Producto </button>
</form>

<br>
{{#if products.length}}
    <div class="table-responsive tabla">
        <table class="table table-dark table-striped">
            <thead>
                <tr>
                    <th scope="col"> Código </th>
                    <th scope="col"> Nombre </th>
                    <th scope="col"> Descripción </th>
                    <th scope="col"> Categoría </th>
                    <th scope="col"> Precio </th>
                    <th scope="col"> Stock </th>
                    <th scope="col"> Imagen </th>
                    <th scope="col"> Eliminar </th>
                </tr>
            </thead>
            <tbody>
                {{#each products}}
                    <tr>
                        <th scope="row"> {{this.code}} </th>
                        <th scope="row"> {{this.title}}</th>
                        <th scope="row"> {{this.description}}</th>
                        <th scope="row"> {{this.category}} </th>
                        <th scope="row"> {{this.price}}</th>
                        <th scope="row"> {{this.stock}}</th>
                        <th scope="row"> {{this.thumbnail}}</th>
                        <th scope="row"> <button id="prodDelete"> Eliminar</button></th>
                    </tr>
                {{/each}}
            </tbody>
        </table>    
    </div>
{{else}}    
    <h2 style="color: chocolate;">No se encontraron productos </h2>
{{/if}}

<script src="/js/index.js"></script>