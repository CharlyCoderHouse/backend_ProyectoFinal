<div>
    <h1>Mi perfil</h1>
    <p>{{user.name}}</p>
    <p>{{user.email}}</p>
    <p>{{user.age}}</p>
    <p>{{user.role}}</p>
    <p>Ultima conexión {{user.last_connection}}</p>
    <div>
        <h2>Ingreso de Archivos para ser Premium</h2>
        <form id="fileInputForm">
            <div class="row">
                <div class="mb-3 col">
                    <label for="profiles" style="font-weight: bold;">Foto de perfil</label>
                    <br/>
                    <input class="custom-file-input" type="file" name="profiles" id="profiles" accept="image/*" /> 
                    <br/>
                    <br/>
                    <label for="IDENTIFICATION" style="font-weight: bold;">Identificación</label>
                    <br/>
                    <input class="custom-file-input" type="file" name="IDENTIFICATION" id="IDENTIFICATION" accept="image/*,.pdf" />
                    <br/>
                    <br/>
                    <label for="ADDRESS" style="font-weight: bold;">Comprobante de domicilio</label>
                    <br/>
                    <input class="custom-file-input" type="file" name="ADDRESS" id="ADDRESS" accept="image/*,.pdf" />
                    <br/>
                    <br/>
                    <label for="ACCOUNT" style="font-weight: bold;">Comprobante de estado de cuenta</label>
                    <br/>
                    <input class="custom-file-input" type="file" name="ACCOUNT" id="ACCOUNT" accept="image/*,.pdf" />
                    <br/>
                    <br/>
                    <input type="submit"class="btn btn-warning" id="{{user._id}}" onclick="fileUserId(this)">
                <div/>
            <div/>
        </form>
    </div>
</div>
<br>
<button id="goHome" class="btn btn-secondary"> Ir al Home</button>
<button id="goExit" class="btn btn-primary" >Salir</button>

<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="/js/insertFile.js"></script>