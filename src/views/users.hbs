<h1>Bienvenidos al servidor express - Joyería Puga</h1> <br>
<h2>Vista de los usuarios</h2>
  
{{#if users.isValid}}
    <div class="table-responsive tabla">
        <table class="table table-primary table-striped">
            <thead>
                <tr>
                    <th scope="col"> Nombre y Apellido </th>
                    <th scope="col"> Role </th>
                    <th scope="col"> Cambiar Role </th>
                    <th scope="col"> Email </th>
                    <th scope="col"> Ultima Conexión </th>
                    <th scope="col"> Eliminar </th>
                </tr>
            </thead>
            <tbody>
                {{#each users}}
                    <tr>
                        <th scope="row"> {{this.name}} </th>
                        <th scope="row"> {{this.role}}</th>
                        <th scope="row">
                            <button type="button" class="btn btncaja btn-warning" 
                                id="{{this._id}}" onclick="roleChangeUserId(this)">
                                Cambiar
                            </button>
                        </th>
                        <th scope="row"> {{this.email}} </th>
                        <th scope="row"> {{this.last_connection}}</th>
                        <th scope="row">
                            <button type="button" class="btn btncaja btn-warning" 
                                id="{{this._id}}" onclick="deleteUserId(this)">
                                Eliminar
                            </button>
                        </th>
                    </tr>
                {{/each}}
            </tbody>
        </table>    
    </div> 
{{else}}    
    <h2 style="color: chocolate;">No se encontraron usuarios </h2>
{{/if}}
<br/>
<button id="deleteUsers" class="btn btn-warning"> Eliminar Usuarios</button>
<button id="goHome" class="btn btn-secondary"> Ir al Home</button>

<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="/js/index.js"></script>